<div class="create">
    <div class="card-container">

        <div class="card">
            <br>
            <br>

            <h2>Edit your company profile!</h2>
            <form method="POST" action="/company/edit" id="usrform" encType="multipart/form-data">

                <input type="text" class="text" value="{{user.username}}" name="username" placeholder={{user.username}}><br>
                <input type="email" value="{{user.email}}" name="email" placeholder="{{user.email}}"><br>

                <input type="text" value="{{user.type}}" class="text" name="type" placeholder="{{user.type}}"><br>
                <textarea type="text" value="{{user.presentation}}" form="usrform" name="presentation" placeholder="{{user.presentation}}"></textarea><br>
                <input type="text" class="text" value="{{user.city}}" name="city" placeholder="{{user.city}}"><br>
                <input type="text" class="text" value="{{user.website}}" name="website" placeholder="{{user.website}}"><br>
                <label for="picture">Picture</label>
                <input type="file" name="picture" value="{{user.picture}}" placeholder="picture"><br>
                <br>

                <input class="button1" type="submit" name="" id="submit">
            </form>
        </div>
    </div>
</div>