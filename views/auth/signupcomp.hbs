<!-- views/auth/signup.hbs -->
<div class="signup">
    <div class="card-container">

        <div class="card">


            <h2>Sign up your Company!
            </h2>

            <form action="/auth/signupcomp" method="POST" id="form-container">
                <label for="username">Company</label>
                <input id="username" type="text" name="username" placeholder="JonSnow">

                <br><br>

                <label for="password">Password</label>
                <input id="password" type="password" name="password" placeholder="Your password">
                <br> {{#if message }}
                <div class="error-message">{{ message }}</div>
                {{/if}}

                <br><br>

                <button class="button1">Create account</button>

                <p class="account-message">
                    Do you already have an account?<br>
                    <a href="/auth/logincomp">Login Company</a>
                </p>
            </form>
        </div>
    </div>
</div>