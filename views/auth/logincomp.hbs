<div class="login">
    <div class="card">
        <br>
        <br>
        <h2>
            Company Login</h2>

        <form action="/auth/logincomp" method="POST" id="form-container">
            <label for="username">Company</label>
            <input id="username" type="text" name="username" placeholder="JonSnow">

            <br><br>

            <label for="password">Password</label>
            <input id="password" type="password" name="password" placeholder="Your password">
            <br> {{#if message }}
            <div class="error-message">{{ message }}</div>
            {{/if}}

            <br><br>

            <button class="button1">Login Company</button>

            <p class="account-message">
                Don't have an account yet?
                <a href="/auth/signupcomp">Signup</a>
            </p>
        </form>

    </div>
</div>